// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node-mongo
{
	"name": "INFO 2310 Dev",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

	// Run on host before container starts - generates unique project name from folder path
	"initializeCommand": "bash -c 'echo COMPOSE_PROJECT_NAME=$(pwd | sed \"s|/|_|g\" | sed \"s|^_||\" | tr \"A-Z\" \"a-z\" | sed \"s|[^a-z0-9_-]||g\") > .devcontainer/.env'",

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": { }
	},

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to Codespaces
		"codespaces": {
			"openFiles": [
				"README.md",
				"client/src/App.jsx"
			]
		},
		// Configure properties specific to VS Code.
		"vscode": {
			"settings": {
				"[css]": {
					"editor.defaultFormatter": "vscode.css-language-features"
				},
				"[html]": {
					"editor.defaultFormatter": "vscode.html-language-features"
				},
				"[javascript][javascriptreact]": {
					"editor.defaultFormatter": "vscode.typescript-language-features"
				},
				"breadcrumbs.enabled": true,
				"css.validate": false,
				"chat.agent.enabled": false,
				"debug.console.collapseIdenticalLines": false,
				"debug.console.wordWrap": true,
				"debug.internalConsoleOptions": "openOnSessionStart",
				"debug.openDebug": "neverOpen",
				"debug.openExplorerOnEnd": true,
				"editor.formatOnSave": true,
				"editor.minimap.maxColumn": 80,
				"editor.minimap.showSlider": "always",
				"editor.stickyScroll.enabled": true,
				"editor.tabCompletion": "on",
				"editor.wordWrap": "on",
				"eslint.workingDirectories": [ { "mode": "auto" } ],
				"explorer.compactFolders": false,
				"files.exclude": {
					".devcontainer": true,
					".git": true,
					".gitattributes": true,
					".vscode": true,
					"**/.gitignore": true,
					"**/.keep": true
				},
				"files.insertFinalNewline": true,
				"files.trimFinalNewlines": true,
				"files.trimTrailingWhitespace": true,
				"git.autofetch": true,
				"github.copilot.editor.enableAutoCompletions": false,
				"github.copilot.enable": {
					"*": false
				},
				"html.autoClosingTags": false,
				"html.format.wrapLineLength": 0,
				"json.format.keepLines": true,
				"markdownlint.config": {
					"MD012": false,
					"MD013": false,
					"MD022": false,
					"MD025": false,
					"MD033": false,
					"MD036": false,
					"MD037": false,
					"MD040": false
				},
				"mdb.confirmRunAll": false,
				"mdb.defaultLimit": 100,
				"mdb.presetConnections": [
					{
						"name": "mongodb",
						"connectionString": "mongodb://localhost:27017"
					}
				],
				"mdb.mcp.server": "autoStartEnabled",
				"mdb.sendTelemetry": false,
				"mdb.showMongoDBHelpExplorer": false,
				"mdb.showMongoDBPlaygrounds": false,
				"mdb.showOverviewPageAfterInstall": false,
				"mdb.useDefaultTemplateForPlayground": false,
				"notebook.experimental.generate": false,
				"todohighlight.enableDiagnostics": true,
				"todohighlight.include": [
					"**/*.js",
					"**/*.jsx",
					"**/*.ts",
					"**/*.tsx",
					"**/*.html",
					"**/*.css",
					"**/*.scss",
					"**/*.php",
					"**/*.rb",
					"**/*.txt",
					"**/*.mdown",
					"**/*.md",
					"**/*.mjs",
					"**/*.cjs"
				],
				"webvalidator.validateOnSave": false,
				"workbench.activityBar.visible": true,
				"workbench.editor.highlightModifiedTabs": true,
				"workbench.editor.wrapTabs": true,
				"workbench.localHistory.maxFileEntries": 200,
				"workbench.localHistory.maxFileSize": 1024,
				"workbench.tree.indent": 18
			},
			"extensions": [
				"pucelle.vscode-css-navigation",
				"ecmel.vscode-html-css",
				"yzhang.markdown-all-in-one",
				"bierner.markdown-checkbox",
				"davidanson.vscode-markdownlint",
				"jgclark.vscode-todo-highlight",
				"celianriboulet.webvalidator",
				"anweber.vscode-httpyac",
				"anweber.httpbook",
				"analytic-signal.preview-pdf",
				"mushan.vscode-paste-image",
				"kisstkondoros.vscode-gutter-preview",
				"sndst00m.vscode-native-svg-preview",
				"mongodb.mongodb-vscode",
				"GitHub.copilot",
				"hassansaadfr.port-cleaner"
			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [ 5173, 8080 ],
	"portsAttributes": {
		"5173": {
			"label": "client",
			"onAutoForward": "silent"
		},
		"8080": {
			"label": "server",
			"onAutoForward": "silent"
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"waitFor": "onCreateCommand",
	"postCreateCommand": {
		"installPackages": "npm install"
	},
	"postStartCommand": {
		"gitPull": "git config --global pull.rebase false",
		"clientPort": "gh codespace ports visibility 5173:public -c \"$CODESPACE_NAME\"",
		"serverPort": "gh codespace ports visibility 8080:public -c \"$CODESPACE_NAME\""
	},
	"postAttachCommand": "echo \">>> Codespace is ready! <<<\"",

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
